<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.github.vatbub.hearingaid.fragments.PrivacyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:contentDescription="@string/fragment_about_superpowered_logo_content_description"
            android:src="@drawable/superpowered_logo" />

        <TextView
            android:id="@+id/fragment_about_markdown_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:textColor="@android:color/black" />

    </LinearLayout>
</ScrollView>
